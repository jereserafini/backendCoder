<h1 class="text-center" >Products</h1>

<a href="/"><button>Back</button></a>
    {{#if products}}
        <table class="table">
            <thead>
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Product</th>
                <th scope="col">price</th>
                <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                    {{#each products}}
                        <tr>
                            <th scope="row">{{this.id}}</th>
                            <td>{{this.title}}</td>
                            <td>{{this.price}}</td>
                            <td><img src={{this.url}} width="20px"></td>
                        </tr>
                    {{/each}}
                    {{else}}
                    <h2 class="mt-2">No products</h2>
            </tbody>
        </table>
    {{/if}}